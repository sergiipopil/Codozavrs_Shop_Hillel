@model Shop.Web.Models.ShopModel

@{
    ViewData["Title"] = "Edit Shop";
}
<h3>@ViewData["Title"]</h3>

<form action="Edit" method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="ID" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">*ShopName</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Location</label>
        <input type="text" class="form-control" asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsOpened" class="control-label"></label>
        <div>
            <input asp-for="IsOpened" type="checkbox" />
            <span asp-validation-for="IsOpened" class="text-danger"></span>
        </div>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-success">Update Shop</button>
    </div>
</form>
